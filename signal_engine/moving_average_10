# Moving Average 10 days #

import yfinance as yf
import pandas as pd
from datetime import date

# Define the ticker for gold (GC=F is a common ticker for Gold Futures)
# You might need to verify the correct ticker depending on the data source you prefer
ticker_symbol = "GC=F"

# Define the start and end dates
start_date = "2015-01-01"
end_date = date.today().strftime("%Y-%m-%d")

# Download the data
gold_data = yf.download(ticker_symbol, start=start_date, end=end_date)

# Reset index to make Date a column
gold_data = gold_data.reset_index()

# Calculate the 10-day moving average of the 'Close' price
gold_data['10_day_MA'] = gold_data['Close'].rolling(window=10).mean()

# Display the DataFrame with the new moving average column
display(gold_data.head(15))
